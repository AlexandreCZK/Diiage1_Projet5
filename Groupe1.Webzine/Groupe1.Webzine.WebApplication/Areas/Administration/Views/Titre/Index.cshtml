@{ Layout = "_Squelette"; }
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Groupe1.Webzine.WebApplication.ViewModels.TitreVM>
<h1 class="mx-3 py-4">
    Titres
</h1>

<a class="btn btn-primary mx-3" asp-area="Administration" asp-controller="Titre" asp-action="Create">Ajouter un nouveau titre</a>

<div class="fluid-container pt-3">
    <table class="table table-striped ms-3 w-100">
        <thead>
            <tr>
                <th>Artiste</th>
                <th>Titre</th>
                <th>Durée</th>
                <th>Date de sortie</th>
                <th><i class="fas fa-eye"></i></th>
                <th><i class="fas fa-thumbs-up"></i></th>
                <th><i class="fas fa-comments"></i></th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Artiste.Nom</td>
                    <td>@item.Libelle</td>
                    <td>@item.Time</td>
                    <td>@item.DateSortie</td>
                    <td>@item.NbLectures</td>
                    <td>@item.NbLikes</td>
                    <td>@item.Commentaires.Count</td>
                    <td>
                        <a class="text-primary" asp-area="Administration" asp-controller="Titre" asp-action="Edit" asp-route-id="@item.IdTitre"><i class="far fa-edit text-primary"></i></a>
                        <a class="text-primary" asp-area="Administration" asp-controller="Titre" asp-action="Delete" asp-route-id="@item.IdTitre"><i class="fas fa-trash text-primary"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
