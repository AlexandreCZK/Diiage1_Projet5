@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Squelette";
}
<div id="result" class="mt-3">
    <h1>Résultats de la recherche pour "@ViewBag.Query"</h1>
    <hr />
    <div class="row">
        <h2>Artistes</h2>
        <div id="result-artists">
            @foreach (var artist in Model.Artistes)
            {
                <i class="fas fa-user text-dark"></i> <a class="text-decoration-none"  asp-controller="Artiste" asp-action="Index"  asp-route-nom="@artist.Nom">@artist.Nom</a> <br />
            }
        </div>
    </div>
    <div class="row mt-3">
        <h2>Titres</h2>
        <div id="result-titles">
            @{
                var i = 0;
                var margin = "";
                foreach (var title in Model.Titres)
                {

                    if (i >= 1) { margin = "mt-3"; }
                    <div class="row @margin">
                        <div class="col-1">
                            <img src="@title.UrlJaquette" class="card-img-top" alt="@title.Album">
                        </div>
                        <div class="col-11">
                            <a asp-area="" asp-controller="Titre" asp-action="Index" asp-route-id="@title.IdTitre" class="text-decoration-none">@title.Libelle</a><br />
                            Durée : @title.Time
                        </div>
                    </div>
                    i++;
                }
            }
        </div>
    </div>
    
</div>